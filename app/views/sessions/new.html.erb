<h2>Log in</h2>

<%= form_for @user, url: sessions_path do |f| %>
  <div class="form-inputs">
    <%= f.text_field :email, required: false, autofocus: true %>
    <%= f.password_field :password, required: false %>
  </div>

  <div class="form-actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>